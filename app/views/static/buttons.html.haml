.button-group
  %button.btn.btn-primary.btn-disabled{:alt => _("Add"),
    :title     => _("Add"),
    "ng-click" => "disabledClick($event)",
    :style     => "cursor:not-allowed",
    "ng-show"  => "newRecord && !saveable(angularForm)"}
    {{addText}}

  %button.btn.btn-primary{:alt => _("Add"),
    :title     => _("Add"),
    "ng-click" => "addClicked($event, true)",
    "ng-show"  => "newRecord && saveable(angularForm)"}
    {{addText}}
  %miq-button{:name => _('Add'), :title => _("Add"), :alt => _("Add"), :enabled => "saveable(angularForm)", 'on-click' => "addClicked($event, true)", 'ng-show' => "newRecord", :primary => 'true'}
  %button.btn.btn-primary.btn-disabled{:alt => _("Save changes"),
    :title     => _("Save changes"),
    "ng-click" => "disabledClick($event)",
    :style     => "cursor:not-allowed",
    "ng-show"  => "!newRecord && !saveable(angularForm)"}
    {{saveText}}

  %button.btn.btn-primary{:alt => _("Save changes"),
    :title     => _("Save changes"),
    "ng-click" => "saveClicked($event, true)",
    "ng-show"  => "!newRecord && saveable(angularForm)"}
    {{saveText}}
  %miq-button{:name => t = _('Save changes'), :title => t, :alt => t, :enabled => "saveable(angularForm)", 'on-click' => "saveClicked($event, true)", 'ng-show' => "!newRecord", :primary => 'true'}
  %button.btn.btn-default.btn-disabled{:alt => _("Reset changes"),
    :title        => _("Reset changes"),
    "ng-class"    => "{'btn-disabled': angularForm.$pristine}",
    "ng-click"    => "resetClicked()",
    "ng-disabled" => "angularForm.$pristine",
    "ng-hide"     => "newRecord"}
    {{resetText}}
  %miq-button{:name => t = _('Reset changes'), :title => t, :alt => t, :enabled => "!angularForm.$pristine", 'on-click' => "resetClicked()", 'ng-show' => "!newRecord"}
  %button.btn.btn-default{:alt => _("Cancel"),
    :title     => _("Cancel"),
    "ng-click" => "cancelClicked($event)"}
    {{cancelText}}
  %miq-button{:name => t = _('Cancel'), :title => t, :alt => t, :enabled => "true", 'on-click' => "cancelClicked($event)"}
